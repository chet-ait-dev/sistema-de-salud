        <field name="model">healthcare.episode</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Episodes">
                <field name="patient_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_healthcare_episode_form" model="ir.ui.view">
        <field name="name">healthcare.episode.form</field>
        <field name="model">healthcare.episode</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <form string="Episodes">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="waitlist,active,onhold,finished" />
                </header>
                <sheet string="Episodes">
                    <group>
                        <field name="patient_id"  options="{'no_open': True, 'no_create': True}" readonly="1"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                    <group>
                        <field name="alledged_disease_id" required='1'/>
                        <field name="diagnosed_disease_id"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Encounters">
                            <field name="encounter_ids" nolabel="True">
                                <tree editable="bottom" string="Encounters" create="1" delete="0">
                                    <field name="bed_id" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="location_id" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

